<h1>Brands</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Brand</th>
    <th>Initial Selection</th>
    <th>Images</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.id %> </td>
    <td><%= brand.name %></td>
    <td><%= link_to brand.wizard_id.to_s + " - " + brand.wizard.title, Wizard.find(brand.wizard_id) %> </td>
    <td><%= link_to 'Images', images_path(brand_id: brand.id) %> </td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Brand', new_brand_path %>
<br/>
<br/>
<button id="show_json_button" onclick="toggleJSON()">Show JSON</button>
<div id="json_output" style="display:none;">
<%= Brand.output_all %>
</div>

<br/>
<br/>
<button id="image_button" onclick="toggleImageJSON()">Show Image Config</button>
<div id="image_output" style="display:none;">
<%= Brand.output_images %>
</div>


<h1>Listing wizards</h1>

<table>
  <tr>
    <th>Level</th>
    <th>Title (ex: Please Select a Product)</th>
    <th>Salesforce Field</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wizards.each do |wizard| %>
  <tr>
    <td><%= wizard.level %></td>
    <td><%= wizard.title %></td>
    <td><%= wizard.fieldname %></td>
    <td><%= link_to 'Show Details', wizard_path(wizard) %></td>
    <td><%= link_to 'Edit', edit_wizard_path(wizard) %></td>
    <td><%= link_to 'Destroy', wizard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

